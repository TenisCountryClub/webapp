<%= form_with(model: jugador, local: true) do |form| %>
  <% if jugador.errors.any? %>
    <div id="error_explanation" class="aler alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
      <h2><%= pluralize(jugador.errors.count, "error", plural: "errores") %> prohibieron que este jugador se guarde:</h2>
      
      <ul>
        <% jugador.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :numero %>
    <%= form.number_field :numero, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :ranking %>
    <%= form.number_field :ranking, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :edad %>
    <%= form.number_field :edad, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :club_asociacion %>
    <%= form.text_field :club_asociacion, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :fecha_inscripcion %>
    <%= form.datetime_select :fecha_inscripcion %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit "Aceptar", :class =>"btn btn-primary" %>
  </div>
<% end %>
