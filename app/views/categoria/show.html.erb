<p id="notice" class="alert alert-success"><span id ="alert"><%= notice %></span><button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span>
  </button></p>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
<p>
  <strong>Nombre:</strong>
  <%= @categorium.nombre %>
</p>

<p>
  <strong>Número de jugadores:</strong>
  <%= @categorium.numero_jugadores %>
</p>

<p>
  <strong>Número de grupos:</strong>
  <%= @categorium.numero_grupos %>
</p>

<p>
  <strong>Número de jugadores por grupo:</strong>
  <%= @categorium.numero_jugadores_grupo %>
</p>

<p>
  <strong>Tipo:</strong>
  <%= @categorium.tipo %>
</p>

<p>
  <strong>Torneo:</strong>
  <%= @categorium.torneo_id %>
</p>

<%= link_to 'Editar', edit_torneo_categorium_path(@torneo, @categorium), class: "btn btn-secondary" %> 
<%= link_to 'Atrás', torneo_categoria_path(@torneo), class: "btn btn-secondary" %>

<% if @categorium.tipo=="cuadroAvance" %>
  <%= link_to 'Cuadros', torneo_categorium_cuadros_path(@torneo,@categorium), class: "btn btn-success" %>

<% elsif @categorium.tipo=="roundRobin" %>
  <%= link_to 'Grupos', torneo_categorium_grupos_path(@torneo,@categorium), class: "btn btn-success" %>
  <%= link_to 'Cuadros', torneo_categorium_cuadros_path(@torneo,@categorium), class: "btn btn-success" %>
<% end %>

  <a href="/torneos/<%= @torneo.id %>/categoria/<%= @categorium.id %>/sortear" class="btn btn-danger">Sortear Categoría</a>

</div>
</div>


<script type="text/javascript">
  if ($('#alert').is(':empty')) {
    $('#notice').css('display','none');
  }
</script>