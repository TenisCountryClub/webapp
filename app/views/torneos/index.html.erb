<p id="notice" class="alert alert-success"><span id ="alert"><%= notice %></span><button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button></p>

<h1>Torneos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha de inicio</th>
      <th>Fecha de fin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @torneos.each do |torneo| %>
      <tr>
        <td><%= torneo.nombre %></td>
        <td><%= torneo.fecha_inicio %></td>
        <td><%= torneo.fecha_fin %></td>
        <td><%= link_to 'Mostrar', torneo, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_torneo_path(torneo), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destruir', torneo, method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Torneo', new_torneo_path, class: "btn btn-secondary" %>

<script type="text/javascript">
  if ($('#alert').is(':empty')) {
    $('#notice').css('display','none');
  }
</script>