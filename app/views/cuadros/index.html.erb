<p id="notice" class="alert alert-success"><span id ="alert"><%= notice %></span><button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span>
  </button></p>
  
<h1>Cuadros</h1>

<table class="table">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Etapa</th>
      <th>Categoría</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuadros.each do |cuadro| %>
      <tr>
        <td><%= cuadro.numero %></td>
        <td><%= cuadro.etapa %></td>
        <td><%= cuadro.categorium_id %></td>
        <td><%= link_to 'Mostrar', [@torneo,@categorium,cuadro] %></td>
        <td><%= link_to 'Editar', edit_torneo_categorium_cuadro_path(@torneo,@categorium,cuadro) %></td>
        <td><%= link_to 'Destruir', [@torneo,@categorium,cuadro], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cuadro', new_torneo_categorium_cuadro_path, class: "btn btn-secondary" %>

<%= link_to 'Volver a Categoría', torneo_categoria_path(@torneo), class: "btn btn-primary" %>


<script type="text/javascript">
  if ($('#alert').is(':empty')) {
    $('#notice').css('display','none');
  }
</script>