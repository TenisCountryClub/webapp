<p id="notice"><%= notice %></p>

<h1>Sorteo <%= @categorium.torneo.nombre+" "+@categorium.nombre %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Grupo</th>
      <th>Jugador</th>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grupos.each do |grupo| %>
      <% grupo.grupo_jugadors.order(:numero).each do |grupo_jugador| %>
        <tr<%if grupo_jugador.grupo_id%2==0 %> class= "table-secondary" <% end %>>
          <td><%= grupo_jugador.grupo.nombre %></td>
          <td><%=grupo_jugador.jugador.numero.to_s+" "+  grupo_jugador.jugador.nombre %></td>
          <td><%= grupo_jugador.numero %></td>
          <!--td><%= link_to 'Show', grupo_jugador %></td>
          <td><%= link_to 'Edit', edit_grupo_jugador_path(grupo_jugador) %></td>
          <td><%= link_to 'Destroy', grupo_jugador, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

