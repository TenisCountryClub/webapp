<p id="notice" class="alert alert-success"><span id ="alert"><%= notice %></span><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button></p>

<h1>Categorías</h1>

<table class="table">
  <thead>
    <tr>
      <th>Torneo</th>
      <th>Nombre</th>
      <th>Número de jugadores</th>
      <th>Número de grupos</th>
      <th>Número de jugadores por grupo</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.torneo_id %></td>
        <td><%= categorium.nombre %></td>
        <td><%= categorium.numero_jugadores %></td>
        <td><%= categorium.numero_grupos %></td>
        <td><%= categorium.numero_jugadores_grupo %></td>
        <td><%= categorium.tipo %></td>
        <td><%= link_to 'Mostrar', [@torneo,categorium] %></td>
        <td><%= link_to 'Editar', edit_torneo_categorium_path(@torneo,categorium) %></td>
        <td><%= link_to 'Destruir', [@torneo,categorium], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoría', new_torneo_categorium_path(@torneo), class: "btn btn-secondary" %>
<%= link_to 'Volver a Torneo', @torneo, class: "btn btn-primary" %>


<script type="text/javascript">
  if ($('#alert').is(':empty')) {
    $('#notice').css('display','none');
  }
</script>