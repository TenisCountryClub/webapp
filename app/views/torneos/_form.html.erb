<%= bootstrap_form_with(model: torneo, local: true) do |form| %>
  <% if torneo.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
      <h2><%= pluralize(torneo.errors.count, "error", plural: "errores") %> prohibieron que este torneo se guarde:</h2>
      
      <ul>
        <% torneo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    
    <%= form.date_select :fecha_inicio, {:use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre']} %>
  </div>

  <div class="field">
    <%= form.date_select :fecha_fin, {:use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre']} %>
  </div>
  <div class="field">
    <%= form.file_field :hoja_calculo, placeholder: "Escoja Archivo" %>
  </div>
  <div class="field">
    <%= form.number_field :numero_canchas %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit "Aceptar", :class => "btn btn-primary" %>
  </div>
<% end %>
